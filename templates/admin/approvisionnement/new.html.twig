{% extends 'admin/base.html.twig' %}

{% block title %}New Approvisionnement{% endblock %}

{% block body %}
    {% include 'admin/_menu.html.twig' %}

    <section class="is-hero-bar">
        <div class="flex flex-col items-center justify-between space-y-6 md:flex-row md:space-y-0">
            <h1 class="title">
                Créer un nouvel Approvisionnement
            </h1>
        </div>
    </section>

    <section class="section main-section">
        <div class="card">
            <div class="card-content">
                {{ form_start(form, { 'attr': {'class': 'form'} }) }}
                    <div class="field">
                        <div class="field">
                        {{ form_label(form.fournisseur, 'Fournisseur', { 'label_attr': { 'class': 'label' } }) }}
                        <div class="control">
                            {{ form_widget(form.fournisseur, { 'attr': { 'class': 'input' } }) }}
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.fruit, 'Fruit', { 'label_attr': { 'class': 'label' } }) }}
                        <div class="control">
                            {{ form_widget(form.fruit, { 'attr': { 'class': 'input' } }) }}
                        </div>
                    </div>
                        {{ form_label(form.quantite_ajouter, 'Quantité à ajouter', { 'label_attr': { 'class': 'label' } }) }}
                        <div class="control">
                            {{ form_widget(form.quantite_ajouter, { 'attr': { 'class': 'input' } }) }}
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.createdAt, 'Date de création', { 'label_attr': { 'class': 'label' } }) }}
                        <div class="control">
                            {{ form_widget(form.createdAt, { 'attr': { 'class': 'input' } }) }}
                        </div>
                    </div>



                    <div class="field">
                        <div class="control">
                            <button class="button green">{{ button_label|default('Enregistrer') }}</button>
                        </div>
                    </div>
                {{ form_end(form) }}

            </div>
        </div>
    </section>
{% endblock %}
