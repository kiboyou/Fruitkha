  <script>
    document.addEventListener("DOMContentLoaded", function () {
    // Sélectionnez tous les liens dans la liste de menus
    const menuLinks = document.querySelectorAll(".menu-list a");

    // Parcourir chaque lien pour ajouter ou enlever la classe active
    menuLinks.forEach(link => {
        // Vérifiez si l'URL actuelle correspond à celle du lien
        if (link.href === window.location.href) {
            // Ajouter la classe "active" à l'élément parent <li>
            link.parentElement.classList.add("active");
        } else {
            // Supprimer la classe "active" si elle n'est pas sélectionnée
              link.parentElement.classList.remove("active");
          }
      });
  });
  </script>
