{% extends 'admin/base.html.twig' %}

{% block title %}-Dashboard{% endblock %}

{% block body %}

{% include 'admin/_menu.html.twig' %}

<section class="is-hero-bar">
  <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
    <h1 class="title">
      Dashboard
    </h1>
  </div>
</section>

<section class="section main-section">
    <div class="grid gap-6 grid-cols-1 md:grid-cols-3 mb-6">
      <!-- Clients Count -->
      <div class="card">
        <div class="card-content">
          <div class="flex items-center justify-between">
            <div class="widget-label">
              <h3>
                Clients
              </h3>
              <h1>
                {{ clientsCount }} <!-- Remplace par la variable dynamique de comptage des clients -->
              </h1>
            </div>
            <span class="icon widget-icon text-green-500"><i class="mdi mdi-account-multiple mdi-48px"></i></span>
          </div>
        </div>
      </div>

      <!-- Sales Count -->
      <div class="card">
        <div class="card-content">
          <div class="flex items-center justify-between">
            <div class="widget-label">
              <h3>
                Sales
              </h3>
              <h1>
                {{ salesAmount }} <!-- Remplace par la variable dynamique du montant des ventes -->
              </h1>
            </div>
            <span class="icon widget-icon text-blue-500"><i class="mdi mdi-cart-outline mdi-48px"></i></span>
          </div>
        </div>
      </div>

      <!-- Performance Count -->
      <div class="card">
        <div class="card-content">
          <div class="flex items-center justify-between">
            <div class="widget-label">
              <h3>
                Performance
              </h3>
              <h1>
{#                {{ performancePercentage }}% <!-- Remplace par la variable dynamique de performance -->#}
              </h1>
            </div>
            <span class="icon widget-icon text-red-500"><i class="mdi mdi-finance mdi-48px"></i></span>
          </div>
        </div>
      </div>

      <!-- Products Count -->
      <div class="card">
        <div class="card-content">
          <div class="flex items-center justify-between">
            <div class="widget-label">
              <h3>
                Products
              </h3>
              <h1>
                {{ productsCount }} <!-- Remplace par la variable dynamique du nombre de produits -->
              </h1>
            </div>
            <span class="icon widget-icon text-yellow-500"><i class="mdi mdi-cube-outline mdi-48px"></i></span>
          </div>
        </div>
      </div>

      <!-- Orders Count -->
      <div class="card">
        <div class="card-content">
          <div class="flex items-center justify-between">
            <div class="widget-label">
              <h3>
                Orders
              </h3>
              <h1>
                {{ ordersCount }} <!-- Remplace par la variable dynamique du nombre de commandes -->
              </h1>
            </div>
            <span class="icon widget-icon text-purple-500"><i class="mdi mdi-package-variant-closed mdi-48px"></i></span>
          </div>
        </div>
      </div>

      <!-- Payments Count -->
      <div class="card">
        <div class="card-content">
          <div class="flex items-center justify-between">
            <div class="widget-label">
              <h3>
                Payments
              </h3>
              <h1>
{#                {{ paymentsCount }} <!-- Remplace par la variable dynamique du nombre de paiements -->#}
              </h1>
            </div>
            <span class="icon widget-icon text-orange-500"><i class="mdi mdi-credit-card mdi-48px"></i></span>
          </div>
        </div>
      </div>
    </div>
</section>

{% endblock %}
