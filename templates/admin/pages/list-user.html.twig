{% extends 'admin/base.html.twig' %}

{% block title %}-Dashboard{% endblock %}

{% block body %}

{% include 'admin/_menu.html.twig' %}

<section class="is-hero-bar">
    <div class="flex flex-col items-center justify-between space-y-6 md:flex-row md:space-y-0">
      <h1 class="title">
        Listes des utilisateurs
      </h1>
    </div>
  </section>

<section class="is-hero-bar">
  <div class="flex flex-col items-center justify-between space-y-6 md:flex-row md:space-y-0">
    <h1 class="title">
    </h1>
    <a href="#">
      <button class="button-ajout">Ajouter un utilisateur</button>
    </a>
  </div>
</section>

  <section class="section main-section">
    <div class="card empty">
      <div class="card-content">
        <div>
          <span class="icon large"><i class="mdi mdi-emoticon-sad mdi-48px"></i></span>
        </div>
        <p>Rien ici...</p>
      </div>
    </div>

    <div class="card has-table">
      <div class="card-content">
        <table class="table">
          <thead>
          <tr>
              <th scope="col">No</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Action</th>
          </tr>
          </thead>
          <tbody>
          <tr>
                <td>1</td>
                <td >Doe</td>
                <td>John</td>
                <td>john.doe@example.com</td>
                <td>+1234567890</td>
                <td class="actions-cell">
                  <div class="buttons items-center nowrap">
                    <!-- Bouton Éditer -->
                    <form action="@{|/admin/auteur/${auteur.id}/edit|}" method="get" class="inline-block">
                      <button class="button small green" type="submit">
                        <span class="icon"><i class="mdi mdi-border-color"></i></span>
                        Editer
                      </button>
                    </form>

                    <!-- Bouton Supprimer -->
                    <form action="@{|/admin/auteur/${auteur.id}/delete|}" method="post" class="inline-block"
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet auteur ?');">
                      <button class="button small red" type="submit">
                        <span class="icon"><i class="mdi mdi-trash-can"></i></span>
                        Supprimer
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
          </tbody>
        </table>


        <div class="table-pagination">
    <div class="pagination-container">
        <ul class="pagination pagination-sm">
            <!-- Précédent -->
            <li class="page-item prev">
                <a class="page-link disabled" href="/admin/auteur?page=0">
                    <i class="mdi mdi-chevron-left"></i>
                </a>
            </li>
            <!-- Pages -->
            <li class="page-item">
                <a class="page-link active" href="/admin/auteur?page=1">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/admin/auteur?page=2">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="/admin/auteur?page=3">3</a>
            </li>
            <!-- Suivant -->
            <li class="page-item next">
                <a class="page-link" href="/admin/auteur?page=2">
                    <i class="mdi mdi-chevron-right"></i>
                </a>
            </li>
        </ul>
        <!-- Infos sur la pagination -->
        <div class="page-info">
            <span>Page 1 of 3</span>
        </div>
    </div>
</div>

      </div>

    </div>


  </section>

{% endblock %}